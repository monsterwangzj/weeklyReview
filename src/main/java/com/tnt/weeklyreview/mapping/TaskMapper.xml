<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tnt.weeklyreview.dao.WeeklyReviewMapper">
	<resultMap id="BaseResultMap" type="com.tnt.weeklyreview.model.Task">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="userid" property="userId" jdbcType="INTEGER" />
		<result column="task" property="task" jdbcType="VARCHAR" />
		<result column="rate" property="rate" jdbcType="NUMERIC" />
		<result column="tasktype" property="taskType" jdbcType="INTEGER" />
		<result column="date" property="date" jdbcType="VARCHAR" />
		<result column="createtime" property="createTime" jdbcType="INTEGER" />
		<result column="lastmodified" property="lastModified" jdbcType="INTEGER" />
	</resultMap>

	<sql id="Base_Column_List">
		id, userid, task, rate, tasktype, date, createtime, lastmodified
	</sql>

	<insert id="insert" parameterType="com.tnt.weeklyreview.model.Task">
		insert into task (
			id, userid, task, rate, tasktype, date, createtime, lastmodified
		)
		values (#{id,jdbcType=INTEGER},
		#{userid,jdbcType=INTEGER},
		#{task,jdbcType=VARCHAR},
		#{rate,jdbcType=NUMERIC},
		#{tasktype,jdbcType=INTEGER},
		#{date,jdbcType=INTEGER},
		#{createtime,jdbcType=INTEGER},
		#{lastmodified,jdbcType=INTEGER}
		)
	</insert>

	<update id="updateByPrimaryKeySelective" parameterType="com.tnt.weeklyreview.model.Task">
		update task
		<set>
			<if test="userid != null">
				userid = #{userid,jdbcType=INTEGER},
			</if>
			<if test="task != null">
				task = #{task,jdbcType=VARCHAR},
			</if>
		</set>
		where id = #{id,jdbcType=INTEGER}
	</update>

	<resultMap type="com.tnt.weeklyreview.model.Task" id="TaskMap" extends="BaseResultMap">
		<collection property="courseInfos" javaType="list"
			ofType="com.tnt.weeklyreview.model.Task">
			<id property="id" column="id" jdbcType="INTEGER" />
			<result property="userid" column="userid" jdbcType="INTEGER" />
			<result property="task" column="task" jdbcType="VARCHAR" />
		</collection>
	</resultMap>

	<select id="getTasks4Day" resultMap="TaskMap" parameterType="java.lang.Integer">
		select u.id, u.userid,
		u.task from task u
		where userid = #{userId,jdbcType=INTEGER}
	</select>

</mapper>